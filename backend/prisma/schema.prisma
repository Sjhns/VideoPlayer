generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  
  relationMode = "prisma"
}

model Video {
  id       Int    @id @default(autoincrement())
  title    String
  describe String
  url      String

  comments  Comment[]
  createdAt DateTime  @default(now())

  @@map("videos")
}

model Comment {
  id   Int    @id @default(autoincrement())
  text String

  video     Video    @relation(fields: [videoId], references: [id])
  videoId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("comment")
}
